<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_gravity="center"
    app:rowCount="4"
    android:background="@color/black"
    app:columnCount="5"


    app:alignmentMode="alignMargins"
    app:useDefaultMargins="true">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <TextView
            android:id="@+id/tvPlayerA1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player A1"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tvPlayerA2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player A2"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <ImageButton
            android:id="@+id/buttonSkorUpA"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/skor_up_a" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonBall_A"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:background="@drawable/button_selector"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:focusable="true">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tennis_ball"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonSet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:background="@drawable/button_selector"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:gravity="center" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/buttonReset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:background="@drawable/button_selector"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textStyle="bold"
            android:textColor="@color/yellow"
            android:textSize="25sp"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Press 3x"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <TextView
            android:id="@+id/tvSkorA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="50sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <ImageButton
            android:id="@+id/buttonSkorDownA"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/skor_down_a" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonAD_A"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:background="@drawable/button_selector"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AD"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonBrightnessUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:clickable="true"
        android:background="@drawable/button_selector"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WIN A"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"

            android:scaleType="centerCrop"
            android:src="@drawable/baseline_arrow_drop_up_orange"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonGamePointUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:clickable="true"
        android:background="@drawable/button_selector"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WIN B"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"

            android:scaleType="centerCrop"
            android:src="@drawable/baseline_arrow_drop_up_orange"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <TextView
            android:id="@+id/tvPlayerB1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player B1"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tvPlayerB2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player B2"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <ImageButton
            android:id="@+id/buttonSkorUpB"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/skor_up_b" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonBall_B"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:background="@drawable/button_selector"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:focusable="true">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tennis_ball"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonBrightnessDown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:clickable="true"
        android:background="@drawable/button_selector"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:focusable="true">

<!--        <ImageView-->
<!--            android:layout_width="50dp"-->
<!--            android:layout_height="50dp"-->
<!--            android:layout_marginLeft="20dp"-->
<!--            android:scaleType="centerCrop"-->
<!--            android:src="@drawable/baseline_brightness_medium_24"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WIN A"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_arrow_drop_down_24_orange"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonGamePointDown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:clickable="true"
        android:background="@drawable/button_selector"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WIN B"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_arrow_drop_down_24_orange"/>



    </LinearLayout>



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <TextView
            android:id="@+id/tvSkorB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="50sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <ImageButton
            android:id="@+id/buttonSkorDownB"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/skor_down_b" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonAD_B"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:background="@drawable/button_selector"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AD"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/enterTeamButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:background="@drawable/button_selector"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_columnSpan="2"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Player"
            android:textStyle="bold"
            android:textColor="@color/yellow"
            android:textSize="35sp"
            android:gravity="center" />

    </LinearLayout>














</androidx.gridlayout.widget.GridLayout>